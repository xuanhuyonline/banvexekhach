<div class="card mb-3">
    <div class="card-header">
        <h4 class="text-center m-1">ĐĂNG KÝ</h4>
    </div>
    <div class="card-body">
        {{#if status}}
            <div class="row bg-warning m-3">
                <div class="col">
                    <p class="m-2" style="font-weight:bold;">{{status}}</p>
                </div>
            </div>
        {{/if}}

        <form class="form-horizontal" action="/customer/sign-up" method="POST">
            <div class="form-group">
                <label class="control-label col-sm-2" for="fullname">Tên đầy đủ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="fullname" id="fullname" placeholder="Nhập vào tên của bạn..." required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Nhập vào tên của bạn..." required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="phone">Số điện thoại:</label>
                <div class="col-sm-10">
                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Nhập số điện thoại..." pattern="^[0-9]{6,12}$" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="phone">Giới tính:</label>
                <div class="col-sm-10">
                    <select class="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nu">Nữ</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="password">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Nhập vào mật khẩu" required />
                </div>
            </div>
            <div class="form-group" style="margin-top: 20px;">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Đăng ký</button>
                    <a href="/customer/sign-in" class="btn btn-primary">Đăng nhập tại đây</a>
                </div>
            </div>
        </form>
    </div>
</div>