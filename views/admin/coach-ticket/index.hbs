<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projects</h3>
        <div class="card-tools">
            <a class="btn btn-primary" href="/admin/coach-ticket/create">Tạo mới vé xe</a>
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>

                    <th style="width: 20%;">
                        Tên khách hàng
                    </th>
                    <th style="width: 20%;">
                        Email
                    </th>
                    <th style="width: 20%;">
                        Tên chuyến xe
                    </th>
                    <th style="width: 20%;">
                        Trạng thái thanh toán
                    </th>
                    <th style="width: 20%;">
                        Tổng tiền
                    </th>
                    <th style="width: 30%; text-align: center;">Công cụ</th>
                </tr>
            </thead>
            <tbody>
                {{#each coachTickets}}
                    <tr>
                        <td>
                            {{this.Customer.customerName}}
                        </td>
                        <td>
                            {{this.Customer.email}}
                        </td>
                        <td>
                          <a href="/admin/coach-trip/detail/{{this.CoachTrip.code}}">{{this.CoachTrip.name}}</a>
                        </td>
                        <td>
                            {{this.Payment.status}}
                        </td>
                        <td>
                            {{this.totalMoney}}
                        </td>

                        <td class="project-actions text-right">
                            <a class="btn btn-success btn-sm" href="/admin/coach-ticket/detail/{{this.coachTicketID}}">
                                <i class="fas fa-folder"></i> Chi tiết
                            </a>
                            <a class="btn btn-primary btn-sm" href="/admin/coach-ticket/edit/{{this.coachTicketID}}">
                                <i class="fas fa-pencil-alt"></i> Sửa
                            </a>
                            <button type="submit" form="deleteCoachTripStatus_@count" class="btn btn-danger btn-sm"><i
                                    class="fas fa-trash"></i> Xóa</button>

                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>